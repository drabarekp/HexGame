<Window x:Class="HexGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1500" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <Label Content="New Game" 
                    MouseLeftButtonDown="newGame_Clicked" 
                    HorizontalAlignment="Stretch"/>
                </TabItem.Header>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="New Tournament" 
                    MouseLeftButtonDown="newTournament_Clicked" 
                    HorizontalAlignment="Stretch"/>
                </TabItem.Header>
            </TabItem>
        </TabControl>
        <Image HorizontalAlignment="Left" Height="659" Margin="0,30,0,0" VerticalAlignment="Top" Width="1100" Name="mainGameView" MouseLeftButtonDown="mainGameView_MouseLeftButtonDown"/>

    </Grid>
</Window>
